<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/female_user"
        android:id="@+id/img"/>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="1dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android: Understanding the fundamentals of java and any other object oriented programming language with simplified language"
            android:textStyle="bold"
            android:id="@+id/title"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Content:text ,Resources:Attached, Posted by:Homsoh | Tue,04 April 17"
                android:textSize="10dp"
                android:id="@+id/bottom_content"/>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="0"
                    android:textAlignment="center"
                    android:background="#ccc"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:id="@+id/view"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New"
                    android:textAlignment="center"
                    android:background="#f7924a"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:padding="5dp"
                    android:id="@+id/new_item"/>

            </RelativeLayout>

        </RelativeLayout>



    </LinearLayout>


</RelativeLayout>